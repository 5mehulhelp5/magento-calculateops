    <preference for="Mirasvit\Tm\Plugin\PushOnCartAddPlugin" type="Ootri\Calculateops\Model\Mirasvit\PushOnCartAddPlugin" />

    <type name="Magento\Catalog\Model\Product\Option"> 
        <plugin name="ootri_calculateops_product_option" type="Ootri\Calculateops\Plugin\ProductOptionPlugin" sortOrder="10"/>
    </type>

    <type name="Magento\Catalog\Model\Product\Option\Value">
        <plugin name="ootri_calculateops_option_value" type="Ootri\Calculateops\Plugin\ProductOptionValuePlugin" sortOrder="10"/>
    </type>

    <type name="Magento\Catalog\Model\Product\Option\Type\Select"> 
        <plugin name="ootri_calculateops_select_type" type="Ootri\Calculateops\Plugin\SelectTypePlugin" sortOrder="10"/>
    </type>

    <!-- New plugin to handle hyva price ViewModel -->
